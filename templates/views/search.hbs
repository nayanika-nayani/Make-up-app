<html>
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Galada&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital@1&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="">
        <title>Search
        </title>
    </head>
    <body>
        <div class="main-content">
            {{>header}}
            <div class="search-content">
                <form>
                    <h4 class="form_ele">product type :</h4><input id="product_type" type="text" name="product_type"><br>
                    <h4 class="form_ele">product category:</h4><input id="product_category" type="text" name="product_category"><br>
                    <h4 class="form_ele">product tags:</h4><input id="product_tags" type="text" name="product_tags"><br>
                    <h4 class="form_ele">brand:</h4><input id="brand" type="text" name="brand"><br>
                    <h4 class="form_ele">price greater than:</h4><input id="price_greater_than" type="text" name="price_greater_than"><br>
                    <h4 class="form_ele">price less than:</h4><input id="price_less_than" type="text" name="price_less_than"><br>
                    <h4 class="form_ele">rating greater than:</h4><input id="rating_greater_than" type="text" name="rating_greater_than"><br>
                    <h4 class="form_ele">rating less than:</h4><input id="rating_less_than" type="text" name="rating_less_than"><br>
                    <button id="search-button">Search</button>
                </form>
            </div>
            <p id="result">

            </p>
        </div>
        {{>footer}}
        <script src="/js/app.js"></script>
    </body>
</html>